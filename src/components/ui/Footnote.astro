---
import InlineTooltip from "../InlineTooltip.astro";
interface Props {
  id: number | string;
  tooltip?: string;
}
const { id, tooltip } = Astro.props;
---

<sup class="align-super text-xs leading-none">
  {tooltip ? (
    <InlineTooltip tip={tooltip}>
      <a
        href={`#ref-${id}`}
        class="inline-flex items-center px-1 rounded text-primary/90 hover:text-primary focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-opacity-40"
        aria-label={`Reference ${id}: ${tooltip}`}
      >
        [{id}]
      </a>
    </InlineTooltip>
  ) : (
    <a
      href={`#ref-${id}`}
      class="inline-flex items-center px-1 rounded text-primary/90 hover:text-primary focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-opacity-40"
      aria-label={`Reference ${id}`}
    >
      [{id}]
    </a>
  )}
</sup>
