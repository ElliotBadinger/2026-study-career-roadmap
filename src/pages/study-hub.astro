---
import BaseLayout from "../layouts/BaseLayout.astro";
import Stepper from "../components/Stepper.astro";
import Section from "../components/Section.astro";
import Surface from "../components/Surface.astro";
import FeatureCard from "../components/FeatureCard.astro";
import Button from "../components/ui/Button.astro";
import Alert from "../components/ui/Alert.astro";
import { study } from "../content/study";
---

<BaseLayout title="Study Hub — Project Phoenix" description="A social-learner playbook: group strategies, accountability, timed past papers, and curated SA resources.">
  <Section>
    <Stepper currentPage="Study Hub" />
    <div class="text-center max-w-3xl mx-auto mt-8">
      <h1 class="text-4xl sm:text-5xl font-display font-bold mb-4 text-balance text-text-light-primary dark:text-text-dark-primary">
        Your Study Hub
      </h1>
      <p class="text-lg text-text-light-secondary dark:text-text-dark-secondary text-balance">
        You learn best with people. Use that advantage: study groups, accountability, and consistent practice with past papers.
      </p>
    </div>
  </Section>

  <Section title="The Social-Learner Advantage">
    <Surface variant="s1" class="p-6">
      <Alert variant="info" title="Key Strategies">
        <ul class="list-disc ml-5 space-y-1 text-sm">
          <li>Form a focused group of 2–4 peers and meet 3–4 times per week.</li>
          <li>Use teach-back: after a topic, one member explains the concept to the group.</li>
          <li>Rotate past-paper marking together to spot patterns and examiner language.</li>
          <li>Pair with an accountability partner for weekly check-ins and goal reviews.</li>
        </ul>
      </Alert>
    </Surface>
  </Section>

  <Section title="Free Resources (South Africa First)">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {study.officialResources.map((resource) => (
        <FeatureCard title={resource.title} href={resource.href} cta="Open Resource">
          {resource.description}
        </FeatureCard>
      ))}
      {study.supplementaryResources.map((resource) => (
        <FeatureCard title={resource.title} href={resource.href} cta="Open Resource">
          {resource.description}
        </FeatureCard>
      ))}
    </div>
  </Section>

  <Section>
    <div class="text-center">
      <Button href="/funding" size="lg">Next Step: Sort Out Funding</Button>
    </div>
  </Section>
</BaseLayout>
