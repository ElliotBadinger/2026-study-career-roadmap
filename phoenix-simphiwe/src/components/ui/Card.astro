---
interface Props {
  href?: string;
  title?: string;
  class?: string;
  interactive?: boolean; // adds hover lift and shadow
  accent?: "blue" | "green" | "purple" | "amber" | "neutral";
}
const {
  href,
  title,
  class: className = "",
  interactive = true,
  accent = "neutral",
} = Astro.props as Props;

const base =
  "rounded-xl border border-base-300 bg-white p-6 " +
  (interactive ? "card-hover" : "");

const accentRing =
  accent === "blue"
    ? "ring-1 ring-inset ring-blue-100"
    : accent === "green"
    ? "ring-1 ring-inset ring-emerald-100"
    : accent === "purple"
    ? "ring-1 ring-inset ring-purple-100"
    : accent === "amber"
    ? "ring-1 ring-inset ring-amber-100"
    : "";
---

{href ? (
  <a href={href} class={`${base} ${accentRing} ${className}`}>
    {title && <h3 class="font-display text-lg font-semibold mb-2 text-neutral">{title}</h3>}
    <div class="text-sm text-neutral/80">
      <slot />
    </div>
  </a>
) : (
  <div class={`${base} ${accentRing} ${className}`}>
    {title && <h3 class="font-display text-lg font-semibold mb-2 text-neutral">{title}</h3>}
    <div class="text-sm text-neutral/80">
      <slot />
    </div>
  </div>
)}