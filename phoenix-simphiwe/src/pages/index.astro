---
import BaseLayout from "../layouts/BaseLayout.astro";
import Alert from "../components/ui/Alert.astro";
import Card from "../components/ui/Card.astro";
import StatTile from "../components/ui/StatTile.astro";
import Footnote from "../components/ui/Footnote.astro";
import Countdown from "../components/islands/Countdown.jsx";
import { home } from "../content/home";
---

<BaseLayout title="Project Phoenix — Your 2026 Launchpad" description="A focused, minimalist roadmap for Simphiwe's academic recovery and career choice.">
  <section class="mb-10">
    <div class="text-center space-y-3">
      <h1 class="font-display text-3xl sm:text-4xl md:text-5xl font-bold text-gradient italic">
        {home.heroTitle}
      </h1>
      <p class="text-neutral/80 max-w-2xl mx-auto">
        {home.heroSubtitle}
      </p>
    </div>
  </section>

  <section class="mb-10">
    <Alert variant="urgent" title={home.critical.title}>
      <p>
        {home.critical.body}
        {home.critical.refs?.map((id) => <Footnote id={id} tooltip={id === 1 ? "Matric pass types and requirements" : "Grade 12 pass requirements 2025"} />)}
      </p>
    </Alert>
  </section>

  <section class="mb-10 grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
    {home.stats.map((s) => (
      <StatTile value={s.value} label={s.label} icon={s.icon} accent={s.accent} />
    ))}
    <div class="rounded-xl border border-base-300 bg-white p-3">
      <Countdown client:load target={home.countdown.target} label={home.countdown.label} />
    </div>
  </section>

  <section class="mb-12">
    <div class="grid gap-6 md:grid-cols-2">
      {home.quickLinksPrimary.map((q) => (
        <Card title={q.title} href={q.href} accent={q.accent}>
          {q.body}
        </Card>
      ))}
    </div>
    <div class="bento-grid">
      {home.quickLinksBento.map((q) => (
        <Card title={q.title} href={q.href} accent={q.accent}>
          {q.body}
        </Card>
      ))}
    </div>
  </section>

  <section id="references" class="mt-8">
    <h2 class="font-display text-xl font-semibold mb-3 text-neutral">References</h2>
    <ol class="list-decimal ml-5 space-y-1 text-sm text-neutral/80">
      <li id="ref-1">
        SACAP — What are the different types of matric passes?
        <a class="text-primary" href="https://www.sacap.edu.za/blog/applied-psychology/what-are-the-different-types-of-matric-passes/">https://www.sacap.edu.za/blog/applied-psychology/what-are-the-different-types-of-matric-passes/</a>
      </li>
      <li id="ref-2">
        Online Career Guidance — Grade 12 Pass Requirements 2025.
        <a class="text-primary" href="https://www.onlinecareerguidance.co.za/2025/01/14/grade-12-pass-requirements/">https://www.onlinecareerguidance.co.za/2025/01/14/grade-12-pass-requirements/</a>
      </li>
    </ol>
  </section>
</BaseLayout>